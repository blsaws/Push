<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.bkaj.push"
      android:versionCode="1"
      android:versionName="1.0"
      android:alwaysRetainTaskState="true"
      android:launchMode="singleTop">
<uses-permission android:name="android.permission.RECEIVE_SMS"></uses-permission>
<uses-feature android:name="android.hardware.telephony"></uses-feature>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-permission android:name="android.permission.RECEIVE_WAP_PUSH"></uses-permission>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".PushActivity" android:screenOrientation="user" android:launchMode="singleTask">
	        <intent-filter>
	            <action android:name="android.intent.action.MAIN" />
	            <category android:name="android.intent.category.LAUNCHER" />
	        </intent-filter>
        </activity>
        <receiver android:name=".PushReceiver">
 			<intent-filter>
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
	  		<intent-filter>
	      		<action android:name="android.provider.Telephony.WAP_PUSH_RECEIVED" />
	      	</intent-filter>				
		</receiver>
    </application>
</manifest>